<Window x:Class="JSONChuckNorrisJokes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONChuckNorrisJokes"
        mc:Ignorable="d"
        Title="Chuck Norris Jokes" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://assetsds.cdnedge.bluemix.net/sites/default/files/styles/big_1/public/news/images/chuck.jpg?itok=d--2HLVI"/>
        </Grid.Background>
        <ComboBox x:Name="cbxJokeCategory" HorizontalAlignment="Left" Margin="42,52,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnGetJoke" Content="Get Joke" HorizontalAlignment="Left" Margin="42,315,0,0" VerticalAlignment="Top" Height="58" Width="132" Click="btnGetJoke_Click"/>
        <Label x:Name="lblTheJoke" Content="Label" HorizontalAlignment="Left" Margin="42,179,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
